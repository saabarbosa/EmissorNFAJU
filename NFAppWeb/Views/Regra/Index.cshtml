@{
    ViewBag.Title = "Regra";
}
<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left;">
                    <button id="btnNovo" class="btn btn-sm btn-success" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Regra</th>
                                <th>CpfCnpj_Prestador</th>
                                <th>Discriminacao</th>
                                <th>Expressoes</th>
                                <th style="text-align: center;">A&ccedil;&otilde;es</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Id:</label>
                            <input id="Id" name="Id" class="form-control" placeholder="Informe o Id" maxlength="10"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Id:</label>
                            <p id="IdLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Regra:</label>
                            <input id="Regra" name="Regra" class="form-control" placeholder="Informe a Regra" maxlength="50"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Regra:</label>
                            <p id="RegraLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>CpfCnpj_Prestador:</label>
                            <input id="CpfCnpj_Prestador" name="CpfCnpj_Prestador" class="form-control" placeholder="Informe o CpfCnpj_Prestador" maxlength="14"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>CpfCnpj_Prestador:</label>
                            <p id="CpfCnpj_PrestadorLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Discriminacao:</label>
                            <textarea id="Discriminacao" name="Discriminacao" class="form-control" placeholder="Informe a Discriminacao"></textarea>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Discriminacao:</label>
                            <p id="DiscriminacaoLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Expressoes:</label>
                            
                            <textarea id="Expressoes" name="Expressoes" class="form-control" placeholder="Informe as Expressoes"></textarea>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Expressoes:</label>
                            <p id="ExpressoesLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/regra.js")"></script>
}