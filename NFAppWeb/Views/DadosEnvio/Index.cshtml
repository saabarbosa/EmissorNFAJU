@{
    ViewBag.Title = "DadosEnvio";
}
<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left; display:none">
                    <button id="btnNovo" class="btn btn-sm btn-success" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Data/hora</th>
                                <th>Arquivo de Importacao</th>
                                <th>Arquivo de Remessa</th>
                                <th>Arquivo de Retorno</th>
                                <th style="text-align: center;">A&ccedil;&otilde;es</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Id:</label>
                            <input id="Id" name="Id" class="form-control" placeholder="Informe o Id" maxlength="10"/>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Data:</label>
                            <input id="Data" name="Data" class="form-control" placeholder="Informe o Data" maxlength="8"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Data:</label>
                            <p id="DataLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>ArquivoImportacao:</label>
                            <input id="ArquivoImportacao" name="ArquivoImportacao" class="form-control" placeholder="Informe o ArquivoImportacao" maxlength="120"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>ArquivoImportacao:</label>
                            <p id="ArquivoImportacaoLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>ConteudoArquivoImportacao:</label>
                            <input id="ConteudoArquivoImportacao" name="ConteudoArquivoImportacao" class="form-control" placeholder="Informe o ConteudoArquivoImportacao" maxlength="-1"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>ConteudoArquivoImportacao:</label>
                            <p id="ConteudoArquivoImportacaoLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>ArquivoRemessa:</label>
                            <input id="ArquivoRemessa" name="ArquivoRemessa" class="form-control" placeholder="Informe o ArquivoRemessa" maxlength="120"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>ArquivoRemessa:</label>
                            <p id="ArquivoRemessaLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>XMLRemessa:</label>
                            <input id="XMLRemessa" name="XMLRemessa" class="form-control" placeholder="Informe o XMLRemessa" maxlength="-1"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>XMLRemessa:</label>
                            <p id="XMLRemessaLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>ArquivoRetorno:</label>
                            <input id="ArquivoRetorno" name="ArquivoRetorno" class="form-control" placeholder="Informe o ArquivoRetorno" maxlength="120"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>ArquivoRetorno:</label>
                            <p id="ArquivoRetornoLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>XMLRetorno:</label>
                            <input id="XMLRetorno" name="XMLRetorno" class="form-control" placeholder="Informe o XMLRetorno" maxlength="-1"/>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>XMLRetorno:</label>
                            <p id="XMLRetornoLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/dadosenvio.js")"></script>
}