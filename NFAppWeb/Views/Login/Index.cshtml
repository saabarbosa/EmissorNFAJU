
@{
    ViewBag.Title = "Login";
    ViewBag.NomeSistema = "Gestão de NF - Plamed";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @using System.Web.Optimization
    @Styles.Render("~/bundles/style-jquery")
    @Styles.Render("~/bundles/style-bootstrap")
    @Styles.Render("~/bundles/style-font")
    @Styles.Render("~/bundles/style-datepicker")
    @Styles.Render("~/bundles/style-selectize")
    @Styles.Render("~/bundles/style-admin-lte")
    @Styles.Render("~/bundles/style-site")

    @{
        if ("internetexplorer".Equals(Request.Browser.Browser.ToLower())
            || "ie".Equals(Request.Browser.Browser.ToLower()))
        {
            <style type="text/css">
                .has-error {
                    margin-bottom: 3px !important;
                }
            </style>
        }
    }


</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Autenticação</b>Portal</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">
                Entre para iniciar sua sessão
            </p>

            <div id="dvformLogin">
                <form id="formLogin" action="/DadosEnvio" method="post">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Usuário" id="Username" maxlength="20">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Senha" id="Password" maxlength="12">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">

                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button id="btnEntrar" type="button" class="btn btn-primary btn-block btn-flat">Entrar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>


        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <div id="divLoader" style="text-align:center; display:none;">
        <image style="width:30px; height:30px;" src="@Url.Content("~/Resources/loader.gif")" />
    </div>

    <div id="dvMsgSucesso" title="Sucesso" class="dvMensagem" style="display: none;">
        <div class="row">
            <div class="col-md-2">
                <div class="btn btn-success btn-file disabled">
                    <i class="fa fa-check-circle"></i>
                </div>
            </div>
            <div class="col-md-10">
                <p id="txtMsgSucesso"></p>
            </div>
        </div>
    </div>

    <div id="dvMsgErro" title="Erro" class="dvMensagem" style="display: none;">
        <div class="row">
            <div class="col-md-2">
                <div class="btn btn-danger btn-file disabled">
                    <i class="fa fa-window-close"></i>
                </div>
            </div>
            <div class="col-md-10">
                <p id="txtMsgErro"></p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/selectize")
    @Scripts.Render("~/bundles/mask")
    @Scripts.Render("~/bundles/admin-lte")
    @Scripts.Render("~/bundles/site")

    @Scripts.Render("~/Scripts/custom/login.js")
</body>
</html>
