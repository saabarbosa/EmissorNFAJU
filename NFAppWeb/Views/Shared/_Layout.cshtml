@{
    ViewBag.NomeSistema = "Gestão de NF - Plamed";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="IE=8;IE=9;IE=10;IE=11;EDGE" />
    <title>@ViewBag.Title</title>
    @using System.Web.Optimization
    @Styles.Render("~/bundles/style-jquery")
    @Styles.Render("~/bundles/style-bootstrap")
    @Styles.Render("~/bundles/style-font")
    @Styles.Render("~/bundles/style-datepicker")
    @Styles.Render("~/bundles/style-selectize")
    @Styles.Render("~/bundles/style-admin-lte")
    @Styles.Render("~/bundles/style-site")

    @{
        if ("internetexplorer".Equals(Request.Browser.Browser.ToLower())
            || "ie".Equals(Request.Browser.Browser.ToLower()))
        {
            <style type="text/css">
                .has-error {
                    margin-bottom: 3px !important;
                }
            </style>
        }
    }

    @RenderSection("head", required: false)
</head>
<body class="skin-blue-light fixed sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a href="~/Home/Index" class="navbar-brand">
                            <span style="font-size: 20px; font-family: Helvetica Neue,Helvetica,Arial,sans-serif; font-size:18px; text-shadow: 0.05em 0.05em #333;">
                                <!--<img src="~/Resources/logo.png" class="logo-marca" />-->
                                @ViewBag.NomeSistema
                            </span>
                        </a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul id="menuPrincipal" class="nav navbar-nav">
                            @MenuHelper.MenuPrincipal()
                        </ul>
                    </div>
                    @MenuUsuarioHelper.MenuUsuario()
                </div>
            </nav>
        </header>
        <div class="content-wrapper">
            <section class="content-header">
                <h1 id="tituloPagina">@ViewBag.Title</h1>
            </section>
            <section class="content">
                @RenderBody()
            </section>
        </div>
    </div>

    <div id="divLoader" style="text-align:center; display:none;">
        <image style="width:30px; height:30px;" src="@Url.Content("~/Resources/loader.gif")" />
    </div>

    <div id="dvMsgSucesso" title="Sucesso" class="dvMensagem" style="display: none;">
        <div class="row">
            <div class="col-md-2">
                <div class="btn btn-success btn-file disabled">
                    <i class="fa fa-check-circle"></i>
                </div>
            </div>
            <div class="col-md-10">
                <p id="txtMsgSucesso"></p>
            </div>
        </div>
    </div>

    <div id="dvMsgErro" title="Erro" class="dvMensagem" style="display: none;">
        <div class="row">
            <div class="col-md-2">
                <div class="btn btn-danger btn-file disabled">
                    <i class="fa fa-window-close"></i>
                </div>
            </div>
            <div class="col-md-10">
                <p id="txtMsgErro"></p>
            </div>
        </div>
    </div>

    <div id="dialog-confirm" title="Excluir Registro" class="dvMensagem" style="display: none;">
        <div class="row">
            <div class="col-md-2">
                <div class="btn btn-warning btn-file disabled">
                    <i class="fa fa-exclamation-triangle"></i>
                </div>
            </div>
            <div class="col-md-10">
                <p>Deseja realmente excluir o registro?</p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/selectize")
    @Scripts.Render("~/bundles/mask")
    @Scripts.Render("~/bundles/admin-lte")
    @Scripts.Render("~/bundles/site")
    @RenderSection("script", required: false)
</body>
</html>